## Xterm:
alias reset='reset -Q'

## PHP Server
function php_server() {
	if [[ -f router.php ]]; then
		echo "Server will start with router.php"
		php -S localhost:8000 router.php
	else
		echo "Server will start, no router.php"
		php -S localhost:8000
	fi
}

